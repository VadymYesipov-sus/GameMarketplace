@model InterviewMVCProject.Models.Player

@{
    ViewData["Title"] = "Edit Player";
}

<h1>Edit Player</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PlayerId" />
    <input asp-for="GuildId" hidden />
    <input asp-for="Class" hidden />


    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MoneyAmount" class="control-label"></label>
        <input asp-for="MoneyAmount" class="form-control" />
        <span asp-validation-for="MoneyAmount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Edit" class="btn btn-primary" />
    </div>
</form>