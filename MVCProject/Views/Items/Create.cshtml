@model InterviewMVCProject.Models.Item

@{
    ViewData["Title"] = "Create Item";
}

<form asp-action="Create" method="post">
    <input type="hidden" name="ownerId" value="@ViewBag.PlayerId" />
    @* <input type="hidden" asp-for="PlayerId" value="@ViewBag.PlayerId" /> since Item has no property value set for PlayerId, it was 0 and used it instead of Player.PlayerId*@

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class=" text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class=" text-danger"></span>
    </div>
    <div>
        <label asp-for="Rarity"></label>
        <select asp-for="Rarity" asp-items="ViewBag.RarityOptions"></select>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}